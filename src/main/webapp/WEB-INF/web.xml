<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.aesys.rubrica.Filtri.folder.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.aesys.rubrica.Login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.aesys.rubrica.Login.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserisciPersonaServlet</servlet-name>
        <servlet-class>com.aesys.rubrica.Login.InserisciPersonaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaPersonaServlet</servlet-name>
        <servlet-class>com.aesys.rubrica.Login.EliminaPersonaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserisciPersonaServlet</servlet-name>
        <url-pattern>/inserisci</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaPersonaServlet</servlet-name>
        <url-pattern>/eliminapersona</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
